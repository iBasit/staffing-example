{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1><span>Welcome to</span> Staffing Test with Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</h1>
            </div>

            <div id="next">
                <table class="table table-bordered table-hover table-stripped text-center">
                    <thead>
                    <tr class="bg-primary">
                        <th>Staff</th>
                        <th>Monday</th>
                        <th>Tuesday</th>
                        <th>Wednesday</th>
                        <th>Thursday</th>
                        <th>Friday</th>
                        <th class="bg-info">Saturday</th>
                        <th class="bg-info">Sunday</th>
                    </tr>
                    </thead>
                    {% for id, staff in shifts %}
                        <tr>
                            <th class="bg-primary">{{ id }}</th>
                            <td nowrap>{% if staff.monday is defined %}{{ staff.monday.startTime | date('H:i') }} to {{ staff.monday.endTime | date('H:i') }}<br/>{{ staff.monday.workHours }} hours{% if staff.monday.workAloneMinutes %}<br/> {{ staff.monday.workAloneMinutes }} minutes{% endif %}{% endif %}</td>
                            <td nowrap>{% if staff.tuesday is defined %}{{ staff.tuesday.startTime | date('H:i') }} to {{ staff.tuesday.endTime | date('H:i') }}<br/>{{ staff.tuesday.workHours }} hours{% if staff.tuesday.workAloneMinutes %}<br/> {{ staff.tuesday.workAloneMinutes }} minutes{% endif %}{% endif %}</td>
                            <td nowrap>{% if staff.wednesday is defined %}{{ staff.wednesday.startTime | date('H:i') }} to {{ staff.wednesday.endTime | date('H:i') }}<br/>{{ staff.wednesday.workHours }} hours{% if staff.wednesday.workAloneMinutes %}<br/> {{ staff.wednesday.workAloneMinutes }} minutes{% endif %}{% endif %}</td>
                            <td nowrap>{% if staff.thursday is defined %}{{ staff.thursday.startTime | date('H:i') }} to {{ staff.thursday.endTime | date('H:i') }}<br/>{{ staff.thursday.workHours }} hours{% if staff.thursday.workAloneMinutes %}<br/> {{ staff.thursday.workAloneMinutes }} minutes{% endif %}{% endif %}</td>
                            <td nowrap>{% if staff.friday is defined %}{{ staff.friday.startTime | date('H:i') }} to {{ staff.friday.endTime | date('H:i') }}<br/>{{ staff.friday.workHours }} hours{% if staff.friday.workAloneMinutes %}<br/> {{ staff.friday.workAloneMinutes }} minutes{% endif %}{% endif %}</td>
                            <td nowrap>{% if staff.saturday is defined %}{{ staff.saturday.startTime | date('H:i') }} to {{ staff.saturday.endTime | date('H:i') }}<br/>{{ staff.saturday.workHours }} hours{% if staff.saturday.workAloneMinutes %}<br/> {{ staff.saturday.workAloneMinutes }} minutes{% endif %}{% endif %}</td>
                            <td nowrap>{% if staff.sunday is defined %}{{ staff.sunday.startTime | date('H:i') }} to {{ staff.sunday.endTime | date('H:i') }}<br/>{{ staff.sunday.workHours }} hours{% if staff.sunday.workAloneMinutes %}<br/> {{ staff.sunday.workAloneMinutes }} minutes{% endif %}{% endif %}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
    h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
    h1 { font-size: 36px; }
    h2 { font-size: 21px; margin-bottom: 1em; }
    p { margin: 0 0 1em 0; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }
    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
    #container { padding: 2em; }
    #welcome, #status { margin-bottom: 2em; }
    #welcome h1 span { display: block; font-size: 75%; }
    #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
    #icon-book { display: none; }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }
        #icon-book { display: inline-block; }
        #status a, #next a { display: block; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }
</style>
{% endblock %}
